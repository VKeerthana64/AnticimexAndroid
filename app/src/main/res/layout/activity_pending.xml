<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:text="Pending Device Registration"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="10sp"
                android:paddingTop="10sp"
                android:textSize="16sp"
                android:text="Your device is pending for activation. Please contact your coordinator or system administrator for assistance."/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtimei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:focusable="false"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:hint="@string/hint_imei"
                android:textStyle="bold"
                android:imeOptions="actionDone"
                android:text="0"
                android:textColorHint="@color/white"
                android:maxLength="20"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight" />


            <Button
                android:id="@+id/btnback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_with_stroke"
                android:text="Go Back to login"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>